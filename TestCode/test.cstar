    if(counter BETWEEN ]1; 10[){
        console.print("Is between 2 and 9");
    }

    while(counter BETWEEN [1; 10]) repeat {
        console.print("Is between 1 and 10");
    }

    while(counter BETWEEN ]1; 10]) repeat {
        console.print("Is between 2 and 10");
    }

    while(counter BETWEEN [1; 10[) repeat {
        console.print("Is between 1 and 9");
    }

    while(counter BETWEEN ]1; 10[) repeat {
        console.print("Is between 2 and 9");
    }

    counter = counter + 1;
}

