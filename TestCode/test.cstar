    }

    if(cow_array[3] < 10){
        console.print("array index 3 (9) < 10");
    }

    if(true AND isTrue){
        console.print("This is true");
    }

    if(false OR isTrue){
        console.print("This is false");
    }

    if(1000 IN cow_array) {
        console.print("1000 is in array 'cow_array'");
    }

    if(1.5 IN weight_array) {
