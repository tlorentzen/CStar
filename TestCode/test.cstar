    integer i = 5;
    integer array newIntArray = [i-4, i-3, i-2, i-1, i, i+1];

    while(i <= newIntArray[5]) repeat {
        i = i + 1;
        console.print(i);
    }

}

integer getRandomNumber(integer min, integer max){
    return random(min, max);
}